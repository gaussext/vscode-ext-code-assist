{
  "name": "code-assist",
  "displayName": "Gauss Code Assist",
  "description": "Code Assist With Ollama",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Code Assist",
      "properties": {
        "code-assist.origin": {
          "type": "string",
          "default": "http://127.0.0.1:11434",
          "description": "Ollama Server Address"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chat-container",
          "title": "代码助手",
          "icon": "assets/chat-icon.svg"
        }
      ]
    },
    "views": {
      "chat-container": [
        {
          "id": "code-assist.view",
          "name": "Chat View",
          "type": "webview",
          "icon": "assets/chat-icon.svg",
          "contextualTitle": "VS Code Chat"
        }
      ]
    },
    "icons": {
      "chat-icon": {
        "default": "add",
        "description": "Chat Icon"
      }
    },
    "menus": {
      "editor/context": [
        {          
          "submenu": "codeAssist.submenu"
        }
      ],
      "codeAssist.submenu": [
        {
          "command": "codeAssist.chat",
          "label": "开始对话"
        },
        {
          "command": "codeAssist.optimization",
          "label": "代码优化",
          "when": "editorHasSelection"
        },
        {
          "command": "codeAssist.explanation",
          "label": "代码解释",
          "when": "editorHasSelection"
        }
      ]
    },
    "submenus": [
      {
        "id": "codeAssist.submenu",
        "label": "代码助手"
      }
    ],
    "commands": [
      {
        "command": "codeAssist.chat",
        "title": "开始对话"
      },
      {
        "command": "codeAssist.optimization",
        "title": "代码优化"
      },
      {
        "command": "codeAssist.explanation",
        "title": "代码解释"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/vsce": "^3.3.1",
    "axios": "^1.8.4"
  }
}