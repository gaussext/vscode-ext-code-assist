{
  "name": "code-assist",
  "displayName": "Gauss Code Assist",
  "description": "",
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Code Assist",
      "properties": {
        "code-assist.origin": {
          "type": "string",
          "default": "http://127.0.0.1:11434",
          "description": "Ollama Server Address"
        },
        "code-assist.deepseek": {
          "type": "string",
          "default": "https://api.deepseek.com",
          "description": "Deepseek Server Address"
        },
        "code-assist.deepseek_token": {
          "type": "string",
          "default": "",
          "description": "Deepseek Server Token"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chat-container",
          "title": "代码助手",
          "icon": "assets/chat-icon.svg"
        }
      ]
    },
    "views": {
      "chat-container": [
        {
          "id": "code-assist.view",
          "name": "Chat View",
          "type": "webview",
          "icon": "assets/chat-icon.svg",
          "contextualTitle": "VS Code Chat"
        }
      ]
    },
    "icons": {
      "chat-icon": {
        "default": "add",
        "description": "Chat Icon"
      }
    },
    "commands": [
      {
        "command": "codeAssist.chat",
        "title": "开始对话"
      },
      {
        "command": "codeAssist.optimization",
        "title": "代码优化"
      },
      {
        "command": "codeAssist.explanation",
        "title": "代码解释"
      },
      {
        "command": "codeAssist.comment",
        "title": "代码注释"
      }
    ],
    "submenus": [
      {
        "id": "codeAssist.submenu",
        "label": "代码助手"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "codeAssist.submenu",
          "group": "navigation",
          "order": 1
        }
      ],
      "codeAssist.submenu": [
        {
          "command": "codeAssist.chat",
          "group": "navigation",
          "order": 1
        },
        {
          "command": "codeAssist.comment",
          "group": "1_modification",
          "order": 1,
          "when": "editorHasSelection"
        },
        {
          "command": "codeAssist.optimization",
          "group": "1_modification",
          "order": 2,
          "when": "editorHasSelection"
        },
        {
          "command": "codeAssist.explanation",
          "group": "1_modification",
          "order": 3,
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "web": "npm --prefix src-web run build",
    "compile": "npm --prefix src-web run build && webpack",
    "watch": "npm --prefix src-web run build && webpack --watch",
    "package": "npm --prefix src-web run build && webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce": "vsce package"
  },
  "dependencies": {
    "axios": "^1.8.4"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.26.3",
    "@types/lodash": "^4.17.16",
    "@types/marked": "^6.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "raw-loader": "^4.0.2",
    "ts-loader": "^9.5.2",
    "typescript": "~5.7.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}